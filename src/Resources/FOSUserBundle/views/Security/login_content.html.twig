{% trans_default_domain 'FOSUserBundle' %}


<div class="row h-100">
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

            {% if error %}

                <div class="alert alert-danger alert-dismissible mt-4" role="alert">
                    <div class="alert-message">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
            {% endif %}

            <div class="text-center mt-4">
                <h1 class="h2">Bienvenue</h1>
                <p class="lead">
                    Connectez-vous à votre session pour continuer
                </p>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="m-sm-4">
                        <div class="text-center">
                            <img src="{{ asset('assets/img/avatars/avatar.jpg') }}" alt="Auth" class="img-fluid rounded-circle" width="132" height="132" />
                        </div>
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}

                            <div class="form-group">
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input class="form-control form-control-lg" type="text"   id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                            </div>
                            <div class="form-group">
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input class="form-control form-control-lg" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                                <small>
                                    <a href="#">Forgot password?</a>
                                </small>
                            </div>
                            <div>
                                <div class="custom-control custom-checkbox align-items-center">
                                    <input id="customControlInline" type="checkbox" class="custom-control-input" value="remember-me" name="remember-me" checked>
                                    <label class="custom-control-label text-small" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                                </div>
                            </div>
                            <div class="text-center mt-3">
                                <!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
                                <input type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary" value="{{ 'security.login.submit'|trans }}" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
