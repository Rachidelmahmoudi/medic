{% extends 'base_ajax.html.twig' %}

{% block sections %}

 <div class="card">
  <div class="card-header">
   <h5 class="card-title mb-0">Choisissez la nature </h5>
  </div>
  <div class="card-body">
   <select class="form-control select2 nature-select" onchange="changeNatureAffectation(this.value);" >
     <option value="">Choisisser la nature</option>
      {% if natures|length > 0 %}
       {% for n in natures %}
         <option value="{{ n.id }}">{{ n.Nom }}</option>
       {% endfor %}
      {% endif %}
   </select>
  </div>
 </div>


<div class="card">
 <div class="card-header">
  <h5 class="card-title mb-0">Choisissez les examens Ã  affecter  </h5>
 </div>
 <div class="card-body examens-affectation">

 <table class="table table-striped data-table mt-3" style="width:100%">
  <thead>
  <tr>
   <th>Nature</th>
   <th>Examen</th>
  </tr>
  </thead>
  <tbody>
  {% if examens|length > 0 %}
   {% for p in examens %}
    <tr>
     <td class="text-left">{{ p.Type.Nom }}</td>
     <td class="table-action text-left">
      <label class="custom-control custom-checkbox">
       <input type="checkbox" class="custom-control-input">
       <span class="custom-control-label">{{ p.Nom }}</span>
      </label>
     </td>
    </tr>
   {% endfor %}
  {% endif %}
  </tbody>
  <tfoot>
  <tr>
   <th>Nature</th>
   <th>Examen</th>
  </tr>
  </tfoot>
 </table>

  <button class="btn btn-success mt-3 mx-auto d-block" type="button" onclick="saveAffectation()"> Valider l'affectation </button>

 </div>
</div>

{% endblock %}


